\mode<presentation>

% Title page

\makeatletter
\defbeamertemplate*{title page}{SAM}[1][]{%
\newlength{\tptextblockwidth}%
\setlength{\tptextblockwidth}{\textwidth-\beamer@leftmargin-\beamer@rightmargin}%
\newlength{\tptextblockheight}%
\setlength{\tptextblockheight}{\paperheight-5mm-1ex-12mm-2ex-2ex-38mm-0.5pt-5mm}%
\begin{tikzpicture}[remember picture,overlay,inner sep=0pt]
% headline
\draw[draw=none,left color=cblue,right color=cdblue] (current page.north west) rectangle ++(\paperwidth,-5mm);
% footline
\draw[draw=none,left color=cdblue,right color=cblue] (current page.south west) rectangle ++(\paperwidth,5mm);

% logos, height = 12mm
\coordinate (logoleft nw)  at ($(current page.north west)+(\beamer@leftmargin,-5mm-1ex)$);% headline height + pic sep
\coordinate (logoright ne) at ($(current page.north east)-(\beamer@leftmargin, 5mm+1ex)$);
\node[anchor=north west] at (logoleft nw)  {\includegraphics[height=12mm]{figures/unicv_logo.png}};
\node[anchor=north east] at (logoright ne) {\includegraphics[height=12mm]{figures/nosi_logo.jpg}};

% text
\coordinate (text nw) at ($(logoleft nw)-(0,12mm+2ex)$);% picture height + picture sep
\node[anchor=north west] at (text nw)  {%
	\parbox[t][\tptextblockheight][s]{\tptextblockwidth}{%
		\begin{beamercolorbox}[left,#1]{title}%
		\usebeamerfont{title}\inserttitle%
		\end{beamercolorbox}%
		\par\vskip0pt plus 1fill%
		\begin{beamercolorbox}[left,#1]{author}%
		\usebeamerfont{author}\insertauthor%
		\end{beamercolorbox}%
		\begin{beamercolorbox}[left,#1]{institute}%
		\usebeamerfont{institute}\insertinstitute%
		\end{beamercolorbox}%
		\par\vskip0pt plus 1fill%
		\begin{beamercolorbox}[left,#1]{date}%
		\usebeamerfont{author}\insertdate%
		\end{beamercolorbox}%
	}%
};


% picture
\coordinate (pic sw) at ($(current page.south west)+(0,5mm+0.5pt)$);
\node[anchor=south west] at (pic sw) {%
	\makebox[\paperwidth][r]{%
	%\includegraphics[height=38mm]{figures/kuppel_eth.jpg}
    \includegraphics[height=38mm]{figures/weinberg.png}%
	}
};
\end{tikzpicture}
}


\defbeamertemplate*{footnote}{SAM}
{%
	\ifnum \insertpagenumber=1
		\begin{tikzpicture}[remember picture,overlay,inner sep=0pt]
			\node[anchor=west] at ($(current page.south west)+(\beamer@leftmargin,2.5mm)$) {%
				\smash{\color{white}\llap{\@textsuperscript{\normalfont\@thefnmark}}\insertfootnotetext}\vphantom{A}%
			};
		\end{tikzpicture}
	\else
		\parindent 0em\noindent%
		\raggedright%
		\llap{{\normalfont\@thefnmark}\enskip}\insertfootnotetext\par%
		%% standard definition
		%\parindent 1em\noindent%
		%\raggedright%
		%\hbox to 1.8em{\hfil\insertfootnotemark}\insertfootnotetext\par%
	\fi
}
\makeatother


\mode
<all>
